[alias]
    st = status
    s = status -sb
    ci = commit
    cia = commit -a
    caa = commit -a --amend
    br = branch
    co = checkout
    df = diff
    di = diff
    la = log -1 HEAD
    lg = log --stat
    lgg = log --all --graph --decorate=short
    ps = push
    psf = push --force-with-lease --force-if-includes
    pl = pull
    am = commit --amend
    aa = add --all
    dh1 = diff HEAD~1

